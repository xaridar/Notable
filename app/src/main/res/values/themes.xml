<resources>
    <!-- Base application theme. -->
    <style name="Theme.Notable" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryDark">@color/red_secondary</item>
        <item name="actionBarStyle">@style/NotableAB</item>

        <item name="colorAccent">@color/red_light</item>

        <item name="android:textViewStyle">@style/OpenSansText</item>
        <item name="materialButtonStyle">@style/NotableButton</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="cardViewStyle">@style/NotableCard</item>
        <item name="checkboxStyle">@style/NotableCheckBox</item>
        <item name="errorTextAppearance">@android:style/TextAppearance</item>
    </style>
    <style name="Theme.Notable.FullScreen" parent="Theme.Notable.NoActionBar">
        <item name="colorPrimaryDark">?android:colorBackground</item>
    </style>
    <style name="Theme.Notable.NoActionBar" parent="Theme.Notable">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OpenSansText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>
    <style name="NotableButton" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="NotableAB" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:color">@color/red_primary</item>
    </style>
    <style name="NotableCard" parent="CardView">
        <item name="cardBackgroundColor">?android:colorBackground</item>
    </style>
    <style name="SecondaryText" parent="OpenSansText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="NotableCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>
    <style name="NotableAlert" parent="ThemeOverlay.Material3.Dialog.Alert">
    </style>
</resources>